# Deployment Configuration Template
# Copy this file to .env and update the values for your environment

# Project Configuration
PROJECT_NAME=RPO_GenData
PROJECT_ROOT=/path/to/your/installation/directory
ENVIRONMENT=development

# Database Configuration  
DATABASE_PATH=/path/to/your/installation/directory/data/gendata.db
DATABASE_URL=sqlite:///${DATABASE_PATH}

# Service Configuration
HOST=0.0.0.0
PORT=8088
API_HOST=localhost
API_PORT=8000

# Security (CHANGE THESE IN PRODUCTION)
SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=180

# GitHub Configuration (Optional)
GH_TOKEN=your_github_token_here

# CORS Origins (Update with your server's domain)
# Note: This service serves frontend and backend from the same port
BACKEND_CORS_ORIGINS=["http://localhost:8088"]

# Logging
LOG_LEVEL=INFO